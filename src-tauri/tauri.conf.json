{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "stride",
  "version": "0.1.0",
  "identifier": "app.stridetime.desktop",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "stride-desktop",
        "width": 800,
        "height": 600
      }
    ],
    "trayIcon": {
      "title": "testing",
      "tooltip": "this is a test",
      "iconPath": "icons/32x32.png"
    },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
